    <Button
        android:id="@+id/btn_hook_activity_start1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="hook Activity启动流程1"/>
    <Button
        android:id="@+id/btn_hook_activity_start2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
